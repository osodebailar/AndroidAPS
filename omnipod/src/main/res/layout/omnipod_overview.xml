                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:paddingStart="5dp"
                        android:text="{fa-bluetooth-b}"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
