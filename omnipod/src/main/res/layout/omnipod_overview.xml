                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="center_horizontal"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:text=":"
                        android:textSize="14sp" />

                    <TextView
